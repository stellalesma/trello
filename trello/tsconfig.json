{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"baseUrl": "./",
		"paths": {
			"*": ["./src/*"]
		},
		"outDir": "./build",
		"lib": ["es6", "dom"],
		"jsx": "react",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules", "dist", "build", "src/setupTests.ts", "scripts"],
	"types": ["typePatches"]
}
